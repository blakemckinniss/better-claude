# Better Claude Environment Configuration

# AI Context Optimization
# Enable AI-powered optimization of context injections (default: false)
CLAUDE_AI_CONTEXT_OPTIMIZATION=false

# API Keys for AI Context Optimization
# At least one is required if AI optimization is enabled

# OpenRouter (Recommended - has free models)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenAI
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Note: Local Ollama is also supported (no API key needed)
# Install Ollama and run: ollama pull llama3.2